@page "/clientes"

<h1>Clientes</h1>


<label for="txtNombre">Nombre</label>
<input @bind="" type="text" name="txtNombre" id="txtNombre">
<label for="txtDescripcion">Cedula</label>
<input @bind="" type="text" name="txtDescripcion" id="txtDescripcion">
<label for="txtPrecio">Telefono</label>
<input @bind="" type="number" name="txtPrecio" id="txtPrecio">
<div class="mt-3"></div>
@* <button class='btn @(ProductoSeleccionado.productoID==0?"btn-success":"btn-warning")' @onclick="">
    <span class='oi @(ProductoSeleccionado.productoID==0?"oi-plus":"oi-pencil")'></span>
</button> *@

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Cedula</th>
            <th>Telefono</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Productos)
        {
            <tr>
                <td>@producto.productoID</td>
                <td>@producto.Nombre</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Precio.ToString("N2")</td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-warning" @onclick="()=>Editar(producto.productoID)">

                            <span class="oi oi-pencil"></span>
                        </button>
                        <button class="btn btn-danger" @onclick="()=>Eliminar(producto.productoID)">
                            <span class="oi oi-trash"></span>
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
